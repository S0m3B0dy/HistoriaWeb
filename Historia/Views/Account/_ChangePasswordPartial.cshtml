@model Historia.Models.LocalPasswordModel

<div class="card">
    <div class="card-header">
        <h6>Change Password</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Manage", "Account"))
    {
        @Html.AntiForgeryToken()
        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(true, "Unable to create Historia account: ")
        </div>
}

        <div class="form-group">
            <label for="tbUserName">Old Password</label>
            @Html.PasswordFor(m => m.OldPassword, new { id = "tbUserName", @class = "form-control", required = "required" })
            <div class="invalid-feedback">Please enter your UserName.</div>
        </div>
        <div class="form-group">
            <label for="tbPassword">Password</label>
            @Html.PasswordFor(m => m.NewPassword, new { id = "tbPassword", @class = "form-control", required = "required" })
            <div class="invalid-feedback">Please enter your Password.</div>
        </div>
        <div class="form-group">
            <label for="tbPassword">Confirm Password</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { id = "tbConfirmPassword", @class = "form-control", required = "required" })
            <div class="invalid-feedback">Please confirm Password.</div>
        </div>
        <button name="register-submit" id="register-submit" class="btn btn-success float-right" style="background-color:#EB941D">Update Password</button>

}

    </div>
</div>

