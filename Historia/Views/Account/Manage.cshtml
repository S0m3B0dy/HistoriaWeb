@model Historia.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
    Layout = "~/Views/Shared/_Historia.cshtml";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h6>My Details</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="tbUserName">Username</label>
                        <input id="tbUserName" class="form-control" />
                        <div class="invalid-feedback">Please enter your UserName.</div>
                    </div>
                    <div class="form-group">
                        <label for="tbEmailAddress">Email Address</label>
                        <input id="tbEmailAddress" class="form-control" />
                        <div class="invalid-feedback">Please enter your Email Address.</div>
                    </div>
                    <button name="register-submit" id="register-submit" class="btn btn-success btn-lg float-right" style="background-color:#EB941D">Update</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="padding-top:15px">
        <div class="col-3">
            @if (ViewBag.HasLocalPassword)
            {
                @Html.Partial("_ChangePasswordPartial")
            }
            else
            {
                @Html.Partial("_SetPasswordPartial")
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
